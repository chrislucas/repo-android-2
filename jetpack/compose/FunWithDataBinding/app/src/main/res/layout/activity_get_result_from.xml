<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.features.tutorials.google.interactwithotherapps.activityresultapis.GetResultFromActivity">
    <!--
        https://m2.material.io/components/buttons/android#text-button
        https://m3.material.io/components/all-buttons
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_new_activity_results_api"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_new_activity_results_api_ii"
        android:text="@string/btn_start_new_activity_results_api"
        style="@style/Widget.MaterialComponents.Button"
        />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_new_activity_results_api_ii"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_new_activity_results_api"
        android:text="@string/btn_start_new_activity_results_api_for_result"
        style="@style/Widget.MaterialComponents.Button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>