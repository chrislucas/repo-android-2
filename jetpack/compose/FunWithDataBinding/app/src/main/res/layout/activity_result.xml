<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.features.tutorials.google.interactwithotherapps.activityresultapis.SimpleResultActivity">

    <!--
        https://m2.material.io/components/buttons/android#text-button
        https://m3.material.io/components/all-buttons
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_result_ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/btn_result_ok"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>