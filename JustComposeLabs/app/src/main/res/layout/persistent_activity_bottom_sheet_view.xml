<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".tutorial.google.view.bottomsheet.aboutbottomsheetbehavior.PersistentBottomSheetViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <include
        android:id="@+id/main_content_bottom_sheet"
        layout="@layout/main_content_bottom_sheet"
        />

    <!-- Adding bottom sheet after main content -->
    <include
        android:id="@+id/simple_bottom_sheet_dialog_layout"
        layout="@layout/simple_bottom_sheet_dialog"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>