<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Funmobdatascience" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="default_style_cardView_Item_layout" parent="Base.CardView">
        <item name="cardCornerRadius">@dimen/card_view_default_radius</item>
        <item name="cardElevation">@dimen/card_view_default_elevation</item>

        <item name="contentPadding">10sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:layout_marginStart">8sp</item>
        <item name="android:layout_marginEnd">8sp</item>
        <item name="android:layout_marginTop">8sp</item>

    </style>

    <style name="default_style_textView_small_normal">
        <item name="android:textSize">18sp</item>
    </style>
</resources>