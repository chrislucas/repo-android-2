<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    tools:context=".ChooseQrCodeReader">

    <TextView
        android:id="@+id/txt_title_choose_qrcode_reader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_title_choose_qrcode_reader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/spn_qrcode_readers"
        tools:textSize="23sp"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/spn_qrcode_readers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_choose_qrcode_reader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:entries="@array/qrcode_reader"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        />

    <Button
        android:id="@+id/btn_confirm_qrcode_reader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/txt_label_confirm_qrcode_reader"
        />

</androidx.constraintlayout.widget.ConstraintLayout>