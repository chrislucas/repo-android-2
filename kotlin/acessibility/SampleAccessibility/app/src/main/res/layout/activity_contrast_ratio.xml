<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContrastRatio">

    <TextView
        android:id="@+id/title_activity_contrast_ratio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_contrast_ratio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textAppearance="bold"
    />

    <TextView
        android:id="@+id/ratio_contrast_title_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_activity_contrast_ratio"
    />

    <TextView
        android:id="@+id/description_activity_contrast_ratio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratio_contrast_title_background"
        android:text="@string/description_of_calculator"
    />

    <TextView
        android:id="@+id/ratio_contrast_description_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_activity_contrast_ratio"
        android:text="@string/description_of_calculator"
    />

</android.support.constraint.ConstraintLayout>