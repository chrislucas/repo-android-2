<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TestLooperThreadActivity">

    <Button
        android:id="@+id/send_message_in_thread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_message_inside_thread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorPrimaryDark"
    />

    <Button
        android:id="@+id/send_message_in_thread_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/send_message_inside_thread_via_post"
        app:layout_constraintStart_toStartOf="@+id/send_message_in_thread"
        app:layout_constraintEnd_toEndOf="@+id/send_message_in_thread"
        app:layout_constraintTop_toBottomOf="@+id/send_message_in_thread"
        android:textColor="@color/colorPrimaryDark"
    />

</androidx.constraintlayout.widget.ConstraintLayout>